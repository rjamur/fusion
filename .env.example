# Arquivo de exemplo para variáveis de ambiente.
# Copie este arquivo para .env e preencha com seus valores.
# NUNCA comite o arquivo .env no Git.

# Django Core
SECRET_KEY=sua_chave_secreta_aqui_use_um_gerador
DEBUG=False # Mude para False em produção
ALLOWED_HOSTS=localhost,127.0.0.1 # Em produção, use seu domínio. Ex: seu-dominio.com

# Configuração do Banco de Dados (PostgreSQL)
POSTGRES_DB=chatwoot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_segura_para_o_postgres

# Configuração do Redis (para o Sidekiq do Chatwoot)
REDIS_PASSWORD=sua_senha_segura_para_o_redis

# Configuração do Chatwoot
# URL base da sua instância Chatwoot (ex: http://localhost:3000 ou https://chat.suaempresa.com)
CHATWOOT_BASE_URL=http://localhost:3000
CHATWOOT_ACCOUNT_ID=1
# Token de acesso de um Agente de API (API Access Token)
CHATWOOT_ACCESS_TOKEN=seu_token_de_agente_de_api_do_chatwoot
# Token de verificação do Agent Bot (HMAC token)
CHATWOOT_BOT_TOKEN=seu_hmac_token_do_agent_bot_chatwoot

# Configuração da IA (Google Gemini)
GEMINI_API_KEY=sua_api_key_do_google_gemini

# Configuração do Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=seu_account_sid_do_twilio
TWILIO_AUTH_TOKEN=seu_auth_token_do_twilio
TWILIO_WHATSAPP_NUMBER=seu_numero_whatsapp_do_twilio_sem_prefixo
TWILIO_INBOX_ID=seu_id_do_inbox_twilio_no_chatwoot # ID do Inbox "API" no Chatwoot

# Configuração do Telegram
TELEGRAM_BOT_TOKEN=seu_token_do_bot_do_telegram
TELEGRAM_INBOX_ID=seu_id_do_inbox_telegram_no_chatwoot # ID do Inbox "API" no Chatwoot

# Configuração do Cloudflare Tunnel (opcional, para expor localmente)
CLOUDFLARE_TOKEN=seu_token_do_tunnel_do_cloudflare